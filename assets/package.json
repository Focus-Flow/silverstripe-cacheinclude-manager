{
	"name": "eco",
	"version": "0.0.0",
	"description": "Ecoya",
	"dependencies": {
		"react": "~0.11",
		"browserify": "~4.2.3",
		"reactify": "~0.14.0",
		"less": "~1.3.0"
	},
	"browserify": {
		"transform": ["reactify"]
	},
	"scripts": {
		"build-less": "lessc -x source/less/style.less > production/css/style.min.css",
		"build-less-dev": "lessc source/less/style.less  > production/css/style.css",
		"build-react": "NODE_ENV=production npm run build-react-dev",
		"build-react-dev": "browserify -r react > ./production/js/bundle.js",
		"buiild": "npm run build-react && npm run build-less",
		"buiild-dev": "npm run build-react-dev && npm run build-less-dev"
	}
}